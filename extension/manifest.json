{
  "manifest_version": 3,
  "name": "Sentient Prompt Rewriter (Dobby)",
  "version": "0.1.0",
  "description": "Right-click or use the popup to rewrite selected text into clearer AI descriptions using Dobby.",
  "action": {
    "default_title": "Sentient Rewriter",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "contextMenus", "storage", "tabs"],
  "host_permissions": ["https://api.sentient-rewrite.xyz/*"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  }
}
